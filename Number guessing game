#include <iostream>
#include <vector>
#include <fstream>
#include <string>

using namespace std;

struct Task {
    string description;
    bool completed;
};

vector<Task> tasks;

// Function to load tasks from file
void loadTasks() {
    ifstream file("tasks.txt");
    if (!file.is_open()) return;

    tasks.clear();
    string line;
    while (getline(file, line)) {
        if (line.empty()) continue;
        Task t;
        if (line[0] == '1') {
            t.completed = true;
            t.description = line.substr(2); // skip "1 "
        } else {
            t.completed = false;
            t.description = line.substr(2); // skip "0 "
        }
        tasks.push_back(t);
    }
    file.close();
}

// ? Fixed for Dev C++ (no auto or range-based loop)
void saveTasks() {
    ofstream file("tasks.txt");
    if (!file.is_open()) {
        cout << "Error opening file for saving.\n";
        return;
    }

    for (int i = 0; i < tasks.size(); i++) {
        string status;
        if (tasks[i].completed)
            status = "1 ";
        else
            status = "0 ";
        file << status << tasks[i].description << endl;
    }

    file.close();
}

// Function to display all tasks
void viewTasks() {
    cout << "\n===== TO-DO LIST =====\n";
    if (tasks.empty()) {
        cout << "No tasks added yet.\n";
        return;
    }
    for (int i = 0; i < tasks.size(); i++) {
        cout << i + 1 << ". [" << (tasks[i].completed ? "?" : " ") << "] "
             << tasks[i].description << endl;
    }
}

// Function to add a task
void addTask() {
    cin.ignore();
    Task t;
    cout << "Enter task description: ";
    getline(cin, t.description);
    t.completed = false;
    tasks.push_back(t);
    saveTasks();
    cout << "Task added successfully!\n";
}

// Function to mark a task as completed
void completeTask() {
    viewTasks();
    int n;
    cout << "\nEnter task number to mark as completed: ";
    cin >> n;
    if (n < 1 || n > tasks.size()) {
        cout << "Invalid task number!\n";
        return;
    }
    tasks[n - 1].completed = true;
    saveTasks();
    cout << "Task marked as completed!\n";
}

// Function to delete a task
void deleteTask() {
    viewTasks();
    int n;
    cout << "\nEnter task number to delete: ";
    cin >> n;
    if (n < 1 || n > tasks.size()) {
        cout << "Invalid task number!\n";
        return;
    }
    tasks.erase(tasks.begin() + n - 1);
    saveTasks();
    cout << "Task deleted successfully!\n";
}

int main() {
    loadTasks();
    int choice;

    do {
        cout << "\n===== TO-DO LIST MENU =====\n";
        cout << "1. View all tasks\n";
        cout << "2. Add a new task\n";
        cout << "3. Mark task as completed\n";
        cout << "4. Delete a task\n";
        cout << "5. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1: viewTasks(); break;
            case 2: addTask(); break;
            case 3: completeTask(); break;
            case 4: deleteTask(); break;
            case 5: cout << "Exiting... Have a nice day!\n"; break;
            default: cout << "Invalid choice. Try again.\n";
        }
    } while (choice != 5);

    return 0;
}




